# Application Configuration
NODE_ENV=development
PORT=8080
APP_NAME=C2PA Generator Assistant

# Database
DATABASE_URL=sqlite:///data/app.db

# AI Configuration (choose one)
# Option 1: OpenAI
OPENAI_API_KEY=sk-your-api-key-here
AI_MODEL=gpt-4

# Option 2: Local LLM (Ollama)
# USE_LOCAL_LLM=true
# OLLAMA_URL=http://localhost:11434
# OLLAMA_MODEL=llama2

# File Upload
MAX_FILE_SIZE=50000000
ALLOWED_FILE_TYPES=pdf,docx,txt,md,json

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Company Configuration
COMPANY_NAME=Sanmarcsoft LLC
COMPANY_LOCATION=United States

# GitHub Integration (for RAG - code search)
# Get a Personal Access Token from: https://github.com/settings/tokens
# Required scopes: repo (for private repos) or public_repo (for public repos only)
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
# Optional: GitHub OAuth App credentials (for device flow authentication)
# GITHUB_OAUTH_CLIENT_ID=your_oauth_app_client_id

# Google Cloud (for production deployment - to be configured later)
# GCP_PROJECT_ID=your-project-id
# GCP_REGION=us-central1
# DOMAIN=generator-product.trusteddit.com
